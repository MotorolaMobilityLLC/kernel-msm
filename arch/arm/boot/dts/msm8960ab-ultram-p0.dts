/dts-v1/;

/include/ "msm8960ab-ultram-common.dtsi"

/include/ "msm8960ab-ultram-p0-legacy.dtsi"

/ {
	mmi,revision = "p0";

	sound {
		qcom,msm8960-card-longname =
			"msm8960-snd-card-wcd,tlv320aic3253_codec";

		dai-tfa9890 {
			status = "disabled";
		};

		dai-tlv320 {
			compatible = "qcom,msm8960-dai-link";
			qcom,msm8960-codec-name = "tlv320aic3253_codec";
		};
	};
};

/* GSBI3 - I2C Touch Bus */
&i2c3 {
	sy3200@20 {
		compatible = "synaptics,sy3200";
		reg = <0x20>;
		interrupt-parent = <&msmgpio>;
		interrupts = <46 0>;
		gpios = <&msmgpio 46 0>, /* IRQ */
		        <&msmgpio 63 0>; /* RESET */

		synaptics,sy3200-tdat-filename = "sy3200-r0.tdat";
	};
};

/* GSBI10 - I2C */
&i2c10 {
	/* TI tlv320aic3253 */
	aic3253@18 {
		compatible = "ti,aic3253";
		reg = <0x18>;
		gpios = <&pm8921_gpio 18 0>, /* RESET */
			<&pm8921_gpio 8 0>;  /* MCLK  */
		aic_vdd-supply = <&rpm_8921_s4>;
	};

	tas2552@41 {
		compatible = "ti,tas2552";
		reg = <0x41>;
		tas_avdd-supply = <&rpm_8921_s4>;
	};

	tfa9890@34 {
		status = "disabled";
	};
};

/* GSBI12 - I2C */
&i2c12 {
	msp430@48 {
		msp430_fw_version = "_p0";
	};
};
